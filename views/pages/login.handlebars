<section id="login-page">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-wrap">
                    <h1 class="logintxt">welcome to jobbr.</h1>
                    <h2 class="longintxt2">a new life starts with us.</h2>
                    <form class="serverform" method="post" id="login">
                        <div class="form-group">
                            <label for="email" class="sr-only">email</label>
                            <input type="text" name="email" id="email" class="form-control" placeholder="Email Address">
                        </div>
                        <div class="form-group">
                            <label for="password" class="sr-only">Password</label>
                            <input type="password" name="password" id="passwrod" class="form-control" placeholder="Password">
                        </div>
                        {{#if error}}
                        <div class="form-group">
                            <div class="alert alert-danger">
                                {{error}}
                            </div>
                        </div>
                        {{/if}}
                        <div class="form-group">
                            <button type="submit" id="btn-login" class="btn btn-custom">Log In</button>
                            <button type="submit" id="btn-signup" class="btn btn-custom">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>