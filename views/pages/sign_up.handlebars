<section class="signup-page">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-wrap">
                    <h1>Sign Up</h1>
                    <form class="serverform" method="post" id="sign-up-form" onsubmit="return checkForm(this);">
                        <div class="form-group">
                            <label for="name" class="sr-only">Name</label>
                            <input type="text" name="name" id="name" class="form-control" placeholder="Name" required>
                        </div>
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <label for="password" class="sr-only">Password</label>
                            <input type="password" name="pwd1" id="pwd1" class="form-control" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <label for="password" class="sr-only">Confirm Password</label>
                            <input type="password" name="pwd2" id="pwd2" class="form-control" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" id="btn-login" class="btn btn-custom">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>