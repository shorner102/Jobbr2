<section class="swipe-page">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="login-panel panel-info">
                    <div class="body">
                        <div class="row">
                            <div class="col-md-9 col-lg-9">
                                <button type="button" class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-thumbs-up"></span>
                                </button>
                                <table class="table job-post">
                                    <tr> 
                                        <th></th>
                                        <th>{{jobtitle}}</th>
                                    </tr>
                                    <tr>
                                        <td>Company</td>
                                        <td>{{company}}</td>
                                    </tr>
                                    <tr>
                                        <td>Location</td>
                                        <td>{{formattedLocation}}</td>
                                    </tr>
                                    <tr>
                                        <td>Job Info</td>
                                        <td>{{snippet}}</td>
                                    </tr>
                                    <tr>
                                        <td>Apply Here!</td>
                                        <td>{{url}}</td>
                                    </tr>
                                </table>
                                <button type="button" class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-thumbs-down"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>